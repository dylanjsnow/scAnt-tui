StepperMotor {
    layout: grid;
    grid-size: 10 2;
    background: $boost;
    height: 15;
    margin: 1;
    min-width: 50;
    padding: 1;
}

Button {
    width: 12;
}

Slider {
    text-opacity: 20%;
    height: 3;
    column-span: 3;

}

.deenergized {
    color: red;
    text-opacity: 50%;
}

.energized {
    text-opacity: 100%;
    color: green;
}

.initialized {
    text-opacity: 100%;
    color: black;
}

